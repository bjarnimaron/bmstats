@using bmstats.Models
@model IEnumerable<PlayerRow>
@{
    ViewBag.Title = "Players";
}

<style>
    .container {
        width: 100% !important
    }
</style>

<h1>Player</h1>
<div class="table table-striped">
    <table id="table" data-sort-class="table-active" data-sortable="true" data-toggle="table" class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col" data-sortable="true">Player</th>
                <th scope="col" data-sortable="true">Score</th>
                <th scope="col" data-sortable="true">Kills</th>
                <th scope="col" data-sortable="true">Deaths</th>
                <th scope="col" data-sortable="true">Assists</th>
                <th scope="col" data-sortable="true">ADR</th>
                <th scope="col" data-sortable="true">Headshot %</th>
                <th scope="col" data-sortable="true">Playtime</th>
                <th scope="col" data-sortable="true">Suicides</th>
                <th scope="col" data-sortable="true">TKs</th>
                <th scope="col" data-sortable="true">Shots Fired</th>
                <th scope="col" data-sortable="true">Shots Hit</th>
                <th scope="col" data-sortable="true">Accuracy %</th>
                <th scope="col" data-sortable="true">Headshots</th>
                <th scope="col" data-sortable="true">Bombs Planted</th>
                <th scope="col" data-sortable="true">Bombs Defused</th>
                <th scope="col" data-sortable="true">Total Damage</th>
                <th scope="col" data-sortable="true">Matches Won</th>
                <th scope="col" data-sortable="true">Matches Lost</th>
                <th scope="col" data-sortable="true">First Blood</th>
            </tr>
        </thead>
        <tbody></tbody>
        @foreach (PlayerRow playerrow in Model)
        {
            <tr>
                <th scope="row">@playerrow.ID</th>
                <td><a href="http://steamcommunity.com/profiles/@playerrow.steamid.To64Bit()">@playerrow.Name</a></td>
                <td>@playerrow.Score</td>
                <td>@playerrow.Kills</td>
                <td>@playerrow.Deaths</td>
                <td>@playerrow.Assists</td>
                <td>@playerrow.GetADR()</td>
                <td>@playerrow.GetHeadPercentage()%</td>
                <td>@playerrow.GetPlayTime()</td>
                <td>@playerrow.Suicides</td>
                <td>@playerrow.Teamkills</td>
                <td>@playerrow.ShotsFired</td>
                <td>@playerrow.ShotsHit</td>
                <td>@playerrow.GetAccuracy()%</td>
                <td>@playerrow.HeadShots</td>
                <td>@playerrow.BombsPlanted</td>
                <td>@playerrow.BombsDefused</td>
                <td>@playerrow.Damage</td>
                <td>@playerrow.MatchesWon</td>
                <td>@playerrow.MatchesLost</td>
                <td>@playerrow.FirstBlood</td>
            </tr>
        }
    </table>
</div>