@using bmstats.Models
@model IEnumerable<Player>
@{
    ViewBag.Title = "Players";
}

<h1>Player</h1>
<div class="table table-striped">
    <table class="table table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Player</th>
                <th scope="col">Score</th>
                <th scope="col">Kills</th>
                <th scope="col">Deaths</th>
                <th scope="col">Assists</th>
                <th scope="col">Suicides</th>
                <th scope="col">TKs</th>
                <th scope="col">Shots Fired</th>
                <th scope="col">Shots Hit</th>
                <th scope="col">Headshots</th>
                <th scope="col">Playtime</th>
                <th scope="col">Bombs Planted</th>
                <th scope="col">Bombs Defused</th>
                <th scope="col">Total Damage</th>
                <th scope="col">Matches Won</th>
                <th scope="col">Matches Lost</th>
                <th scope="col">First Blood</th>
            </tr>
        </thead>
        <tbody></tbody>
        @foreach (Player player in Model)
        {
            <tr>
                <th scope="row">@player.ID</th>
                <td><a href="http://steamcommunity.com/profiles/@player.SteamID64()">@player.Name</a></td>
                <td>@player.Score</td>
                <td>@player.Kills</td>
                <td>@player.Deaths</td>
                <td>@player.Assists</td>
                <td>@player.Suicides</td>
                <td>@player.Teamkills</td>
                <td>@player.ShotsFired</td>
                <td>@player.ShotsHit</td>
                <td>@player.HeadShots</td>
                <td>@player.PlayTime</td>
                <td>@player.BombsPlanted</td>
                <td>@player.BombsDefused</td>
                <td>@player.Damage</td>
                <td>@player.MatchesWon</td>
                <td>@player.MatchesLost</td>
                <td>@player.FirstBlood</td>
            </tr>
        }
    </table>
</div>